# 示例环境变量配置文件
# 复制此文件为 .env 来配置应用

# 执行模式: "docker" 或 "conda"
EXECUTION_MODE=conda

# 沙盒执行设置
SANDBOX_TIMEOUT=30
MAX_TIMEOUT=300
MAX_CODE_LENGTH=100000
MAX_FILE_SIZE=10485760

# Docker设置 (仅在EXECUTION_MODE=docker时使用)
DOCKER_IMAGE=python:3.11-slim
WORK_DIR=/sandbox

# 资源限制
MEMORY_LIMIT=512m
CPU_LIMIT=1

# 网络设置
NETWORK_MODE=bridge

# 临时目录
TEMP_DIR=/tmp/sandbox